<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="PS\Domain\Common\Entities\CroppedImage" table="croppedImage">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="url" column="url" type="string" length="255" nullable="false"/>
        <field name="pixelWidth" column="pixelWidth" type="integer" nullable="false"/>
        <field name="pixelHeight" column="pixelHeight" type="integer" nullable="false"/>
        <many-to-one target-entity="PS\Domain\Common\Entities\RawImage" field="rawImage"/>
    </entity>
</doctrine-mapping>